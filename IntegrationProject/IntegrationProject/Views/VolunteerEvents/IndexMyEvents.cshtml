@model IEnumerable<IntegrationProject.Models.VolunteerEvent>

@{
    ViewBag.Title = "IndexMyEvents";
    Layout = "~/Views/Shared/_LayoutVolunteer.cshtml";
}


<body>
    <h1>My Events</h1>
       <p>
        @Html.ActionLink("Create New", "Create")
      </p>
  
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Event</th>
                <th>Status</th>
                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                @Html.ActionLink(item.EventName, "Details", new { id = item.ID })
                </td>
                <td>
                    @if (item.HostID == ViewBag.LoggedUserID)
                    {
                        <p>Event Host</p>
                    }
                    else
                    {
                        <p>Volunteer</p>
                    }
                </td>
               
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
              
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
            </tr>
            }            
        </tbody>        
    </table>
    @Html.ActionLink("Back to List", "Index")
</body>

