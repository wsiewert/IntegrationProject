@model IEnumerable<IntegrationProject.Models.VolunteerEvent>

@{
    ViewBag.Title = "Event";
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">

    <style type="text/css">
        .blueText {
            color: #0000FF;
        }
    </style>
</head>

<body>
    <style>
        div.description {
            margin: 20px 0px 20px 0px;
            padding: 10px 0px 10px 0px;
            /*border: 5px groove red;*/
        }
    </style>
    <div align="left">
        <h2>
            @foreach (var x in Model)  
            {
                @Html.DisplayFor(eventName => x.EventName)
            }
            
           
        </h2>
    </div>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <div align="center">
        <div class=" description">
            <h4>
                @Html.DisplayNameFor(model => model.Description)
            </h4>
                @foreach (var x in Model) { 
                    <p>
                        @Html.DisplayFor(modelItem => x.Description)
                    </p>
                }
        </div>
    </div>

    <style>
        div.text-left {
            /*border: 3px dashed red;*/
            margin: 20px 0px 20px 0px;
            padding: 10px 0px 10px 10px;
        }
    </style>


    <table style="width:100%", id="vertical-1">           
    @foreach (var item in Model)
    {
        <tr>
            <th>Event</th>
            <td>@Html.DisplayFor(modelItem => item.EventName)</td>
        </tr>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Address)</th><
            <td><span class="address">@Html.DisplayFor(modelItem => item.Address)</span></td> 
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
        </tr>

        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
        @Html.ActionLink("Details", "Details", new { id = item.ID })
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })

    }
        
    </table>


    <h4>Events in Google Map</h4>

    <div id="googleMap" style="width:100%;height:400px;"></div>
    <script>
        function myMap() {
            var mapProp = {
                center: new google.maps.LatLng(43.0389000, -87.9064700),
                zoom: 15,
            };
            var map = new google.maps.Map(document.getElementById("googleMap"), mapProp); 
            var addresses = document.getElementsByClassName('address');
            var geocoder = new google.maps.Geocoder();
            
            for (var i = 0; i < addresses.length; i++) {
                var address = addresses[i].innerHTML;

                // Geocode each address and place a marker on the map
                geocoder.geocode({ 'address': address }, function (results, status) {
                    if (status == 'OK') {
                        //map.setCenter(results[0].geometry.location);
                        var marker = new google.maps.Marker({
                            map: map,
                            position: results[0].geometry.location
                        });
                    }
                    else {
                        alert('Geocode was not successful for the following reason: ' + status);
                    }
                });   
            }
            map.setCenter(mapProp.center);
        }
       
    </script>

    @*map API*@
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDT9CH_tlLdtRwV0F6iqV3SNtV1biYxLOY&callback=myMap"></script>
    @*Geocode API*@
    <script src=" https://maps.googleapis.com/maps/api/geocode/json?&key=AIzaSyAZT8uW1sDbU7asaucSjFJZ0b_Nnjqw5W8"></script>
    
</body>
</html>

